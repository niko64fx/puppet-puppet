
[master]
    autosign             = $confdir/autosign.conf { mode = 664 }
    reports              = foreman,puppetdb
    external_nodes       = /etc/puppet/node.rb
    node_terminus        = exec
    ca                   = true
    ssldir               = /var/lib/puppet/ssl
    certname             = <%= @fqdn %>
    parser               = futur
    strict_variables     = false
    storeconfigs         = true
    storeconfigs_backend = puppetdb
